<h1>Listing episodes</h1>

<table>
  <tr>
    <th>Nr</th>
    <th>Datum</th>
    <th>Title</th>
    <th>Rating</th>
    <th>Anz rating</th>
    <th>Serie</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @episodes.each do |episode| %>
  <tr>
    <td><%= episode.nr %></td>
    <td><%= episode.datum %></td>
    <td><%= episode.title %></td>
    <td><%= episode.rating %></td>
    <td><%= episode.anz_rating %></td>
    <td><%= episode.serie %></td>
    <td><%= link_to 'Show', episode %></td>
    <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
    <td><%= link_to 'Destroy', episode, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

